.outer.container
  .row
    .devise-form
      %h1.h3.mb-3.fw-normal アカウント作成
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = render "devise/shared/error_messages", resource: resource
        .form-item.name
          = f.label :名前
          = f.text_field :name, placeholder: 'GAN BARU', class: 'form-control'
        .form-item.email
          = f.label :email
          = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'ganbaru@example.com', class: 'form-control'
        .form-item.password
          = f.label :password
          = f.password_field :password, autocomplete: "new-password", class: 'form-control'
        .form-item
          = f.label :password_confirmation
          = f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control'
        .actions.w-100.btn-square
          = f.submit "アカウント作成"
      = render "devise/shared/links"
